exec kogen build kogen.cue
cmp stdout golden.yaml

-- kogen.cue --
kogen: main: {
	apiVersion: "kogen.internal/v1alpha1"
	kind: "Cog"
	spec: resource: ["deployment.yaml", "service.yaml"]
	spec: kustomize: commonAnnotations: "app.kubernetes.io/managed-by": "kogen"
}

-- deployment.yaml --
apiVersion: apps/v1
kind: Deployment
metadata:
  name: nginx-deployment
  labels:
    app: nginx
  annotations:
    existing.annotation: "keep-me"
spec:
  replicas: 3
  selector:
    matchLabels:
      app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
      - name: nginx
        image: nginx:1.14.2
        ports:
        - containerPort: 80

-- service.yaml --
apiVersion: v1
kind: Service
metadata:
  name: nginx-service
  labels:
    app: nginx
spec:
  selector:
    app: nginx
  ports:
  - port: 80
    targetPort: 80
  type: ClusterIP

-- golden.yaml --
apiVersion: apps/v1
kind: Deployment
metadata:
  annotations:
    app.kubernetes.io/managed-by: kogen
    existing.annotation: keep-me
  labels:
    app: nginx
  name: nginx-deployment
spec:
  replicas: 3
  selector:
    matchLabels:
      app: nginx
  template:
    metadata:
      annotations:
        app.kubernetes.io/managed-by: kogen
      labels:
        app: nginx
    spec:
      containers:
      - image: nginx:1.14.2
        name: nginx
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  annotations:
    app.kubernetes.io/managed-by: kogen
  labels:
    app: nginx
  name: nginx-service
spec:
  ports:
  - port: 80
    targetPort: 80
  selector:
    app: nginx
  type: ClusterIP
